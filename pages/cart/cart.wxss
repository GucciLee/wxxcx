#modal input{
  border: 1px solid #ccc;
  padding:10rpx 20rpx;
}

.container{
  padding: 0;
  background-color: #efefef;
  min-height: 100vh;
  position: relative;
}
.shop{
  width: 100%;
}
.shop-name{
  background-color: #18498c;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.shop-wran{
  background-color: #fdfeec;
  color: #f3747f;
  font-size: 30rpx;
  line-height: 50rpx;
  padding:0 20rpx;
}

/** 购物袋 */
.shop-bag{
  padding: 40rpx 20rpx;
  overflow: hidden;
  background-color: #fff;
}
.shop-bag .title{
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 10rpx;
}
.shop-bag .bag{
  margin-top: 12rpx;
  padding: 12rpx;
  width: 216rpx;
  height: 120rpx;
  border: 1px solid #18498c;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  float: left;
  margin-right: 28rpx;
}
.shop-bag .bag .bag-prices{
  font-size: 26rpx;
  line-height: 40rpx;
}
.set-product-num{
  display: flex;
  justify-content: space-around;
  align-items:center;
  padding: 0 12rpx;
}
.set-product-num view{
  flex: 0 0 auto;
  width: 62rpx;
  height: 62rpx;
  border: 1px solid #18498c;
  border-radius: 50%;
}
.set-product-num image{
  width: 100%;
  height: 100%;
}

/** 商品列表 */
.product-list{
  padding-bottom: 240rpx;
}
.product-list .list{
  position: relative;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 16rpx;
  height: 160rpx;
}
.product-list .list .li{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-list .title{
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product-list .prices{
  color: #f3747f;
  font-size: 32rpx;
}
.product-list .set-product-num{
  width: 200rpx;
  text-align: center;
  position: absolute;
  right: 10%;
  bottom: 10%;
}
.product-list .remove{
  position: absolute;
  right: 12%;
  top: 10%;
}
.product-list .remove image{
  width: 40rpx;
  height: 40rpx;
}

.shop-booking{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-booking .hand-input{
  position:absolute;
  left:31%;
  font-size:28rpx;
  display:flex;
  top:-60%;
  border:1px solid #ccc;
  padding:4rpx 20rpx;
  border-radius:30rpx;

}
.shop-booking .hand-input view{
  padding-left: 10rpx;
  color: #1a73e8;
}
.shop-booking .scan{
  width: 150rpx;
  height: 150rpx;
  background: #f48523;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 40rpx;
  left: 34rpx;
  box-shadow:0 2px 5px #333333;
}
.shop-booking .scan image{
  width: 50%;
  height: 50%;
}
.shop-booking .prices{
  margin-left: auto;
  display: flex;
  justify-content: space-between;
  padding-right: 50rpx;
}
.shop-booking .prices view{
  color: #f48523;
  padding-left: 10rpx;
}

.shop-booking .booking{
  background-color: #d3d3d3;
  width: 250rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.shop-booking .booking-active{
  background-color: #f48523;
}